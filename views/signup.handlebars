<div class='row d-flex justify-content-center mt-5'>
  <div class='col-8 col-md-4 col-lg-3 col-xl-2 card-shadow rounded'>
    <h2 class='text-center m-4 mt-5'>Signup</h2>

    <form class='form signup-form '>
      <div class='form-group mb-3'>
        <label for='name-signup' class="form-label">Name:</label>
        <input class='form-control' type='text' id='name-signup' />
      </div>
      <div class='form-group mb-3'>
        <label for='email-signup'>Email:</label>
        <input class='form-control' type='text' id='email-signup' />
      </div>
      <div class='form-group mb-3'>
        <label for='password-signup'>Password:</label>
        <input class='form-control' type='password' id='password-signup' />
      </div>
      <div class='d-flex justify-content-center m-5'>
        <button class='btn btn-primary' type='submit'>Signup</button>
      </div>
    </form>
  </div>
</div>

<script src='/js/signup.js'></script>