<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Move Mate</title>
    {{! Bootstrap }}
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9'
      crossorigin='anonymous'
    />
    {{!-- <link rel="stylesheet" href="/css/pricing.css"> --}}
    <link rel='stylesheet' href='/css/reset.css' />
    <link rel='stylesheet' href='/css/home.css' />
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>    
    <nav class='navbar navbar-expand-lg bg-blue position-static'>
      <div class='container-fluid '>
        <a class='navbar-brand' href='#'>{{#if logged_in}} <span class="color-yellow">Welcome </span><span class="text-white">{{name}}</span>{{/if}}</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='offcanvas'
          data-bs-target='#offcanvasScrolling'
          aria-controls='navbarNav'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class="offcanvas offcanvas-start custom-offcanvas" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-5" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
          <div class="offcanvas-body d-flex justify-content-lg-center bg-blue">
            
          <ul class='navbar-nav'>
            <li class='nav-item ml-5 mr-5'>
              <a class='nav-link active text-white' aria-current='page' href='/'>Home</a>
            </li>
            <li class='nav-item ml-5 mr-5 '>
              <a class='nav-link text-white' href='#about'>About Us</a>
            </li>
            <li class='nav-item ml-5 mr-5'>
              <a class='nav-link text-white' href='#'>Pricing</a>
            </li>
            
            {{#if logged_in}}
              <li class='nav-item ml-5 mr-5'>
                <a class='nav-link text-white' href='/faq'>FAQ</a></li>
              <li class='nav-item ml-5 mr-5'><a
                  href='/'
                  class='nav-link text-white'
                  id='logout'
                >Logout</a></li>

            {{else}}
              <li class='nav-item ml-5 mr-5'><a
                  class='nav-link text-white'
                  href='/login'
                >login</a></li>

              <li class='nav-item ml-5 mr-5'>
                <a class='nav-link text-white' href='/login'>signup</a></li>

            {{/if}}
            
          </ul>
          </div>
        </div>
      </div>
    </nav>


  
   
    <main>

      <!-- Render the sub layout -->
      {{{body}}}
    </main>
    <footer>
      <div class='card text-center'>
        <div class='card-header'>
          Featured
        </div>
        <div class='card-body'>
          <h5 class='card-title'>Special title treatment</h5>
          <p class='card-text'>With supporting text below as a natural lead-in
            to additional content.</p>
          <a href='#' class='btn btn-primary'>Go somewhere</a>
        </div>
        <div class='card-footer text-body-secondary'>
          2 days ago
        </div>
      </div>
    </footer>
    {{! Bootstrap Script }}
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm'
      crossorigin='anonymous'
    ></script>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
    <script src="/js/home.js"></script>
  </body>
</html>